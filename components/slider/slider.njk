<div 
class="slider"
data-module="slider"
data-slides="slider__slide"
data-bullets="1"
data-arrows="1"
data-direction="horizontal"
data-button-value="1"
data-infinite="1">
    {% for slide in slides %}
        <div class="slider__slide">
            <div class="card">
                <div class="card__image">
                    <img src="{{ slide.image.url}}" alt="{{ slide.image.alt}}">
                </div>
                <h3>{{ slide.title }}</h3>
                <p>{{ slide.body }}</p>
            </div>
        </div>
    {% endfor %}
</div>